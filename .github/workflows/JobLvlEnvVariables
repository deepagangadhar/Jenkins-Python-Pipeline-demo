name: Variables-demo Python application
on: # multiple triggers when this workflow can run
 workflow_dispatch:  # manually run code
 push:
   branches:
     - master
 pull_request:
   branches:
     - master
env:
 PYTHON_VERSION_NEW: 3.12
jobs:
  job1:
    runs-on: ubuntu-latest
    env:  # variable at Job level
      PYHTON_VERSION: 3.11 
    steps: 
    - name: Clone the repo 
      uses: actions/checkout@v6
    - name: Install Python ${{ env.PYHTON_VERSION }} on runner
      uses: actions/setup-python@v6
      with:
        python-version: ${{ env.PYHTON_VERSION }}
    - name: Install python dependencies
      run: |
       pip install --upgrade pip
       pip install -r requirements.txt
  job2:
    runs-on: ubuntu-latest
    env:
     PYHTON_VERSION: 3.9
    steps: 
    - name: Clone the repo 
      uses: actions/checkout@v6
    - name: Install Python ${{ env.PYHTON_VERSION }} on runner
      uses: actions/setup-python@v6
      with:
        python-version: ${{ env.PYHTON_VERSION }}
    - name: Install python dependencies
      run: |
       pip install --upgrade pip
       pip install -r requirements.txt
  job3:
    runs-on: ubuntu-latest
    steps: 
    - name: Clone the repo 
      uses: actions/checkout@v6
    - name: Install Python on runner
      env:
       PYHTON_VERSION: 3.12
      uses: actions/setup-python@v6
      with:
        python-version: ${{ env.PYHTON_VERSION }}
    - name: Install python dependencies
      run: |
       pip install --upgrade pip
       pip install -r requirements.txt
